<h2 class="mt-4">Contact List</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Mobile</th>
        </tr>
    </thead>
    <tbody>
        <% contacts.forEach((contact, index) => { %>
            <tr>
                <th scope="row"><%= index + 1 %></th>
                <td><%= contact.name %></td>
                <td><%= contact.email %></td>
                <td><%= contact.mobile %></td>
            </tr>
        <% }) %>
    </tbody>
</table>